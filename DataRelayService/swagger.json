{
  "swagger": "2.0",
  "info": {
    "description": "Welcome to CryptoBot's DataRelayService.  This service is responsible for relaying data to our UIs.",
    "version": "1.0.0",
    "title": "DataRelayService"
  },
  "tags": [
    {
      "name": "health",
      "description": "Verify the status of the service"
    },
    {
      "name": "optimality",
      "description": "Investigate current market conditions"
    },
    {
      "name": "currencies",
      "description": "View currency details"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Verify the service is active",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The service is active"
          }
        }
      }
    },
    "/optimality": {
      "get": {
        "tags": [
          "optimality"
        ],
        "summary": "Check if current markets are optimal",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Optimality"
            }
          }
        }
      }
    },
    "/optimality/{test}": {
      "get": {
        "tags": [
          "optimality"
        ],
        "summary": "Test UI with specified optimality",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "test",
            "type": "string",
            "required": true,
            "description": "Optimality to include in response"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/TestOptimality"
            }
          }
        }
      }
    },
    "/currencies": {
      "get": {
        "tags": [
          "currencies"
        ],
        "summary": "Get latest top 100 cryptocurrencies",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Currencies"
              } 
            }
          },
          "500": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/CurrenciesError"
            }
          }
        }
      }
    },
    "/currencies/{count}": {
      "get": {
        "tags": [
          "currencies"
        ],
        "summary": "Get {count} latest top 100 cryptocurrencies",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "count",
            "type": "integer",
            "required": true,
            "description": "Count of latest top 100 cryptocurrencies to get"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Currencies"
              }
            }
          },
          "500": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/CurrenciesError"
            }
          }
        }
      }
    },
    "/currencies/symbol/{symbol}": {
      "get": {
        "tags": [
          "currencies"
        ],
        "summary": "Get latest info for cryptocurrency symbol",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "symbol",
            "type": "string",
            "required": true,
            "description": "Cryptocurrency symbol to get latest info for"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Currency"
              }
            }
          },
          "500": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/CurrenciesError"
            }
          }
        }
      }
    },
    "/currencies/symbol/{symbol}/{count}": {
      "get": {
        "tags": [
          "currencies"
        ],
        "summary": "Get {count} latest info for cryptocurrency symbol",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "symbol",
            "type": "string",
            "required": true,
            "description": "Cryptocurrency symbol to get latest info for"
          },
          {
            "in": "path",
            "name": "count",
            "type": "integer",
            "required": true,
            "description": "Count of latest info for cryptocurrency symbol to get"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Currency"
              }
            }
          },
          "500": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/CurrenciesError"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Optimality": {
      "type": "object",
      "properties": {
        "optimality": {
          "type": "string",
          "enum": [
            "good",
            "bad"
          ]
        }
      }
    },
    "TestOptimality": {
      "type": "object",
      "properties": {
        "optimality": {
          "type": "string"
        }
      }
    },
    "Currency": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "coins": {
          "$ref": "#/definitions/CurrencyDetails"
        },
        "time": {
          "type": "number",
          "format": "double"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "CurrencyDetails": {
      "type": "object",
      "properties": {
        "weeklyPriceChange": {
          "type": "number",
          "format": "float"
        },
        "name": {
          "type": "string"
        },
        "abbrev": {
          "type": "string"
        },
        "marketCap": {
          "type": "integer",
          "format": "int64"
        },
        "price": {
          "type": "number",
          "format": "float"
        },
        "volume": {
          "type": "integer",
          "format": "int64"
        },
        "hourlyPriceChange": {
          "type": "number",
          "format": "float"
        },
        "supply": {
          "type": "integer",
          "format": "int64"
        },
        "dailyPriceChange": {
          "type": "number",
          "format": "float"
        },
        "minable": {
          "type": "boolean"
        }
      }
    },
    "Currencies": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "coins": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CurrencyDetails"
          }
        },
        "time": {
          "type": "number",
          "format": "double"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "CurrenciesError": {
      "type": "object",
      "properties": {
        "errorMessage": {
          "type": "string"
        }
      }
    }
  }
}