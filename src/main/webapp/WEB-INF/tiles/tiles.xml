<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

<!--  Templates -->
   <definition name="baseLayout" template="/WEB-INF/jsp/layout/base-layout.jsp">
    	<put-attribute name="page_head" value="/WEB-INF/jsp/shared/page_head.jsp" />
    	<put-attribute name="navbar" value="/WEB-INF/jsp/shared/navbar.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/shared/footer.jsp" />
    </definition>

    <definition name="loginLayout" template="/WEB-INF/jsp/layout/login-layout.jsp">
    	<put-attribute name="page_head" value="/WEB-INF/jsp/shared/page_head.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/shared/footer.jsp" />
    </definition>
    
    <definition name="empty_template" template="/WEB-INF/jsp/layout/empty_template.jsp"/>
    
    <definition name="public_template" template="/WEB-INF/jsp/layout/default_template.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/shared/public_header.jsp"/>
        <put-attribute name="sidebar" value=""/>
        <put-attribute name="footer" value="/WEB-INF/jsp/shared/authenticated_footer.jsp"/>
    </definition>
    
    <definition name="authenticated_template" template="/WEB-INF/jsp/layout/default_template.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/shared/authenticated_header.jsp"/>
        <put-attribute name="sidebar" value="/WEB-INF/jsp/shared/sidebar_navigation.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/shared/authenticated_footer.jsp"/>
    </definition>
    
    <definition name="report_template" template="/WEB-INF/jsp/layout/report_template.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/shared/report_header.jsp"/>
        <put-attribute name="footer" value=""/>
    </definition>
    
    <definition name="standalone_template" template="/WEB-INF/jsp/layout/default_template.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/shared/standalone_header.jsp"/>
        <put-attribute name="footer" value=""/>
    </definition>
    
    <definition name="body_only_template" template="/WEB-INF/jsp/layout/body_only_template.jsp"/>
    
   
</tiles-definitions>